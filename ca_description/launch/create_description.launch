<?xml version="1.0"?>
<launch>
  <arg name="model" default="$(find ca_description)/urdf/create_2.xacro"/>

  <arg name="robot_name" default="create"/>
  <arg name="visualize" default="$(optenv VISUALIZE false)"/>
  <arg name="tf_prefix" value="$(arg robot_name)_tf"/>

  <!-- Stacks:
    * turtlebot
    * roomblock
   -->
  <arg name="stack" value="$(optenv STACK turtlebot)"/>
  <!-- Lasers:
    * astra
    * kinect
    * r200
    * rplidar
    * xtion_pro
   -->
  <arg name="laser" value="$(optenv LASER rplidar)"/>

  <arg name="freq" value="40"/>

  <!-- Robot description -->
  <arg name="xacro_args" value="visualize:=$(arg visualize)
                                robot_name:=$(arg robot_name)
                                stack:=$(arg stack)
                                laser:=$(arg laser)"/>
  <!-- TODO (@eborghi10): Use only 1 robot_description for multiple robots -->
  <param name="robot_description" command="$(find xacro)/xacro $(arg model) $(arg xacro_args)"/>
  <!-- Robot state publisher-->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="$(arg freq)" />
    <param name="tf_prefix" value="$(arg tf_prefix)" />
  </node>
</launch>
